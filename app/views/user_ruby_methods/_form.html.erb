<%= form_with(model: user_ruby_method, class: "contents") do |form| %>
  <% if user_ruby_method.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user_ruby_method.errors.count, "error") %> prohibited this user_ruby_method from being saved:</h2>

      <ul>
        <% user_ruby_method.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class="font-bold text-1xl mt-5">メソッド名</p>
  <h2 class="font-bold text-2xl">
    <%= @user_ruby_method.ruby_method.ruby_module.name %>#<%= @user_ruby_method.ruby_method.name %>
  </h2>

  <%= form.hidden_field :ruby_method_id, :value => @user_ruby_method.ruby_method.id %>

  <div class="my-5">
    <%= form.label :memo %>
    <%= form.text_area :memo, rows: 5, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if action_name == "edit" %>
    <div class="my-5">
      <%= form.label :remembered %>
      <%= form.check_box :remembered, class: "block mt-2 h-5 w-5" %>
    </div>
  <% end %>

  <h2 class="font-bold text-2xl text-blue-600 underline mb-5"><a target=”_blank” href="<%= @user_ruby_method.ruby_method.official_url %>">公式で確認する</a></h2>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
