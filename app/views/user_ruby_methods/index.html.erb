<div class="w-full mb-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold lg:text-3xl">メソッド一覧</h1>
  </div>

  <%= search_form_for @search, url: user_ruby_methods_path do |f| %>
    <div class="flex justify-between items-center mt-3">
      <div class='label-select'>
        <p class="mb-1 font-bold">学習の進捗で絞り込む</p>
        <label><%= f.radio_button :remembered_eq, '',class:"me-1" %>全て</label>
        <label><%= f.radio_button :remembered_eq, true,class:"me-1" %>知っている</label>
        <label><%= f.radio_button :remembered_eq, false,class:"me-1" %>知らない</label>
      </div>
    </div>
    <div class="flex justify-between items-center ">
      <div class='label-select'>
        <p class="mb-1 mt-2">カテゴリーで絞り込む</p>
        <label><%= f.radio_button :ruby_method_ruby_module_name_eq, '',class:"me-1" %>全て</label>
        <%= f.collection_radio_buttons(:ruby_method_ruby_module_name_eq, RubyModule.all, :name, :name) do |b| %>
          <%= b.radio_button %>
          <%= b.label class: "me-1" %>
        <% end %>
      </div>
    </div>
    <%= f.submit class:"btn btn-sm btn mt-2 mb-5" %>
  <% end %>

  <% if @user_ruby_methods.present? %>
    <div class="min-w-full">
      <%= render @user_ruby_methods %>
    </div>

    <div class="flex justify-start">
      <%= paginate @user_ruby_methods %>
    </div>
  <% else %>
    <div>
      <h2 class="text-2xl mt-10">検索条件に合致したメソッドはございませんでした🙇‍</h2>
    </div>
  <% end %>

</div>
