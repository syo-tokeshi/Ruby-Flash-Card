<header class="flex justify-between h-auto text-white items-center">
  <% if current_user %>
    <div class="items-center">
      <%= link_to embedded_svg("logo_vertical.svg", alt: "アプリのロゴ画像", class: "md:w-32 h-16"), root_path, class:"text-3xl ms-2 mt-2 hidden md:inline-block" %>
      <%= link_to embedded_svg("logo_vertical.svg", alt: "アプリのロゴ画像", class: "w-16 h-18 mb-8 ms-3"), root_path, class:"ms-2 mt-2 md:hidden" %>
    </div>
    <div class="me-5 flex items-center">
      <%= link_to "管理者用モジュール一覧",ruby_modules_path, class:"me-5" if current_user.admin %>
      <%= link_to "管理者用メソッド一覧", ruby_methods_path,class:"me-5"  if current_user.admin %>
      <%= link_to "メソッド一覧", user_ruby_methods_path,class:"ms-5 me-4 md:me-5" if current_user.challenged_ruby_methods.present? %>
      <%= link_to "フラッシュカードに挑戦", new_flash_card_path,class:"me-5 hidden md:inline-block" %>
      <%= link_to "問題を解く", new_flash_card_path,class:"me-3 md:hidden" %>
      <div class="mt-3">
        <label tabindex="0" class="user-icon cursor-pointer"><%= image_tag(current_user.image, class: "w-12 h-12 md:w-16 md:h-16 rounded", alt: "ユーザーの画像") %></label>
        <div class="tooltip tooltip-left" data-tip="最大Lv.<%= RubyMethod.count %>に向けて頑張ろう!">
          <span>Lv.<%= UserRubyMethod.where(user_id: current_user, remembered: true).count %>🔥</span>
        </div>
      </div>
    </div>
  <% end %>
</header>
